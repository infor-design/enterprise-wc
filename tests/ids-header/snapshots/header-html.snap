<ids-header>
      <ids-toolbar role="toolbar">
        <ids-toolbar-section type="button">
          <ids-button icon="menu" role="button"><ids-icon icon="menu" class="ids-icon"></ids-icon>
            <span slot="text" class="audible">Application Menu Trigger</span>
          </ids-button>
        </ids-toolbar-section>
        <ids-toolbar-section type="title">
          <ids-text font-size="20">My Header</ids-text>
          <ids-text font-size="14">With some extra information below</ids-text>
        </ids-toolbar-section>
        <ids-toolbar-section align="end">
          <ids-search-field collapsible="" id="header-search" clearable="true" label-state="collapsed" no-margins="" color-variant="alternate" collapsed="" placeholder="Type to search" label="Search">
            <ids-trigger-button slot="trigger-start" icon="search" color-variant="alternate" class="expand-button"><ids-icon icon="search" class="ids-icon"></ids-icon></ids-trigger-button>
          </ids-search-field>
        </ids-toolbar-section>
        <ids-toolbar-section type="button">
          <ids-theme-switcher theme="default-light"></ids-theme-switcher>
        </ids-toolbar-section>
      </ids-toolbar>
    </ids-header>