{
  "name": "ids-enterprise-wc",
  "version": "0.0.0-beta.2",
  "description": "The Web Component version of the IDS Enterprise component library",
  "main": "app/index.js",
  "directories": {
    "lib": "src",
    "test": "test",
    "doc": "doc",
    "example": "app"
  },
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --open",
    "start:watch": "nodemon --watch webpack.config.js --exec \"npx webpack-dev-server\"",
    "lint": "npx eslint *.js src test app && npx stylelint src/**/*.scss --config .stylelintrc.json && npm run mdlint && npx htmlhint app/**/*.html",
    "mdlint": "remark .",
    "publish:dry-run": "npm run build && cp -f package.json dist && cp -f README.md dist && cp -f LICENSE dist && cd dist && npm publish --dry-run",
    "publish:npm": "npm run build && cp -f package.json dist && cp -f README.md dist && cp -f LICENSE dist && cd dist && npm publish",
    "test": "jest",
    "test:watch": "jest --watchAll --coverage",
    "test:coverage": "jest --coverage",
    "test:coverage-only-changed": "jest --coverage --onlyChanged",
    "test:ci": "jest --maxWorkers=2",
    "test:visuals": "npx percy exec -- npx jest --maxWorkers=2",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:updateSnapshot": "jest --updateSnapshot",
    "ncu": "npx ncu"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-markdown-style-guide"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infor-design/enterprise-wc.git"
  },
  "bugs": {
    "url": "https://github.com/infor-design/enterprise-wc/issues"
  },
  "author": "Hook & Loop",
  "license": "Apache-2.0",
  "homepage": "https://design.infor.com",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@percy/puppeteer": "^1.1.0",
    "@wordpress/jest-puppeteer-axe": "^1.10.0",
    "autoprefixer": "^10.0.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.0",
    "css-loader": "^4.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-compat": "3.8.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-wc": "^1.2.0",
    "favicons-webpack-plugin": "^4.2.0",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.0",
    "htmlhint": "^0.14.1",
    "ids-identity": "3.0.0-rc.3",
    "install": "^0.13.0",
    "jest": "^26.5.2",
    "jest-puppeteer": "^4.4.0",
    "loglevel": "^1.7.0",
    "mini-css-extract-plugin": "^0.12.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "pino": "^6.7.0",
    "postcss-loader": "^4.0.3",
    "puppeteer": "^5.3.1",
    "remark-cli": "^8.0.1",
    "remark-preset-lint-markdown-style-guide": "^3.0.1",
    "sass-loader": "^10.0.2",
    "sass-to-string": "^1.1.0",
    "style-loader": "^1.3.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-webpack-plugin": "^2.1.0",
    "terser-webpack-plugin": "^4.2.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
